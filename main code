    function generateWish() {
      const name = document.getElementById("nameInput").value.trim();
      const output = document.getElementById("wishOutput");

      if (!name) {
        output.innerHTML = `<div class="wish">Please enter a name ðŸŒ¸</div>`;
        return;
      }

      const randomWish = wishes[Math.floor(Math.random() * wishes.length)];
      const finalWish = randomWish.replace("{name}", name);

      const isArabic = /[\u0600-\u06FF]/.test(finalWish);

      output.innerHTML = `<div class="wish ${isArabic ? "arabic" : ""}">${finalWish}</div>`;
    }

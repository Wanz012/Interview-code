    const wishes = [
      "ðŸŒŸ Good luck, {name}! May success follow you in your interview and beyond.",
      "ðŸ’¼ Wishing you confidence and clarity, {name}. Youâ€™ve got what it takes!",
      "âœ¨ Believe in yourself, {name}. This opportunity is just the start of something great.",
